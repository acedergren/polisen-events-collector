# Polisen Events Collector - Environment Configuration
# Copy this file to .env and fill in your values
# WARNING: Never commit .env to version control!

# ============================================================================
# OCI (Oracle Cloud Infrastructure) Configuration
# ============================================================================

# OCI Object Storage Configuration
OCI_NAMESPACE=your-oci-namespace
OCI_BUCKET_NAME=polisen-events-collector
OCI_COMPARTMENT_ID=ocid1.compartment.oc1..your-compartment-id
OCI_REGION=eu-stockholm-1

# OCI Vault Configuration (for secure credential management)
# Set USE_VAULT=false to use local OCI config file (~/.oci/config) instead
# Note: Using vault is highly recommended for production
USE_VAULT=true
VAULT_SECRET_ID=ocid1.vaultsecret.oc1.your-secret-id

# ============================================================================
# Application Configuration
# ============================================================================

# User-Agent for API requests (required by Polisen API terms)
# Format: AppName/Version (Purpose; Contact: email)
API_USER_AGENT=PolisEnEventsCollector/1.0 (Data Collection; Contact: your-email@example.com)

# API Contact Email (will be included in User-Agent header)
API_CONTACT_EMAIL=your-email@example.com

# Logging directory (optional, defaults to ./logs)
LOG_DIR=./logs

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ============================================================================
# Polling Configuration (Optional - defaults provided)
# ============================================================================

# Polisen API URL (should not need to change)
POLISEN_API_URL=https://polisen.se/api/events

# Polling interval in minutes (default: 30)
# Note: Must comply with Polisen API rules (minimum 10s between calls)
POLLING_INTERVAL_MINUTES=30
